{
    "micronaut": {
        "application": {
            "name": "website"
        },
        "server": {
            "port": "8080"
        },
        "router": {
            "static-resources": {
                "images": {
                    "mapping": "/images/**",
                    "paths": "classpath:static/images"
                }
            }
        }
    },
    "endpoints": {
        "all": {
            "port": "8081"
        },
        "health": {
            "enabled": true,
            "sensitive": false
        }
    }
}